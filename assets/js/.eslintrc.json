{
	"env": {
		"browser": true,
		"jquery": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"array-bracket-spacing": "error",
		"array-callback-return": "error",
		"block-spacing": "error",
		"camelcase": "error",
		"comma-dangle": "error",
		"comma-spacing": "error",
		"curly": "error",
		"eol-last": "error",
		"key-spacing": "error",
		"linebreak-style": "error",
		"no-alert": "error",
		"no-caller": "error",
		"no-catch-shadow": "error",
		"no-empty-function": "error",
		"no-eq-null": "error",
		"no-eval": "error",
		"no-floating-decimal": "error",
		"no-lonely-if": "error",
		"no-mixed-operators": "error",
		"no-multi-spaces": "error",
		"no-param-reassign": "error",
		"no-return-assign": "error",
		"no-self-compare": "error",
		"no-shadow-restricted-names": "error",
		"no-trailing-spaces": "error",
		"no-unneeded-ternary": "error",
		"no-useless-call": "error",
		"no-useless-concat": "error",
		"no-useless-escape": "error",
		"no-whitespace-before-property": "error",
		"operator-assignment": "error",
		"operator-linebreak": "error",
		"radix": "error",
		"semi-spacing": "error",
		"semi": "error",
		"space-before-blocks": "error",
		"space-in-parens": "error",
		"space-infix-ops": "error",
		"yoda": "error",
		"eqeqeq": ["error", "smart"],
		"func-style": ["error", "declaration"],
		"indent": ["error", 4],
		"max-len": ["error", 140],
		"quote-props": ["error", "consistent"],
		"keyword-spacing": [
			"error", {
				"before": true,
				"after": false,
				"overrides": {
					"else": {
						"after": true
					},
					"try": {
						"after": true
					},
					"return": {
						"after": true
					}
				}
			}
		],
		"space-unary-ops": [
			"error", {
				"words": true,
				"nonwords": false,
				"overrides": {
					"new": false
				}
			}
		],
		"quotes": [
			"error",
			"single", {
				"avoidEscape": true
			}
		],
		"brace-style": [
			"error",
			"stroustrup", {
				"allowSingleLine": true
			}
		],
		"space-before-function-paren": [
			"error", {
				"anonymous": "always",
				"named": "never"
			}
		],
		"no-console": [
			"error", {
				"allow": ["warn", "error"]
			}
		],
		"newline-per-chained-call": [
			"error", {
				"ignoreChainWithDepth": 3
			}
		],
		"no-multiple-empty-lines": [
			"error", {
				"max": 2
			}
		],
		"no-unused-vars": [
			"error", {
				"argsIgnorePattern": "^_"
			}
		],
		"max-statements-per-line": [
			"error", {
				"max": 2
			}
		],
		"id-blacklist": ["error", "value", "val", "key"],
		"id-length": [
			"error", {
				"min": 4,
				"exceptions": [
					"i", "j", "k",
					"e", "ev", "xhr", "url", "URL",
					"a", "b",
					"tr", "div"
				]
			}
		],
		"complexity": ["warn", 40],
		"no-use-before-define": ["warn", "nofunc"],
		"no-magic-numbers": [
			"warn",
			{"ignore": [-1, 0, 0.5, 1, 2, 3, 10, 100, 1000]}
		],
		"dot-notation": [
			"warn", {
				"allowPattern": "^.*?_.*$"
			}
		],
		"spaced-comment": [
			"warn",
			"always", {
				"markers": [":", "::"],
				"exceptions": [":", "::"]
			}
		]
	}
}
